<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.author</param-name>
        <param-value>Save The Deep Tower</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/authprotec</param-value>
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source da usare nel codice -->
        <param-value>jdbc/progettoDB</param-value>
    </context-param>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gruppo</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.MakeGruppo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listgruppi</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.ListGruppi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>aula</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.MakeAula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>evento</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.MakeEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attrezzatura</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.MakeAttrezzatura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>authprotec</servlet-name>
        <servlet-class>com.stdt.auleweb.controller.AuthProtec</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gruppo</servlet-name>
        <url-pattern>/gruppo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listgruppi</servlet-name>
        <url-pattern>/listgruppi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aula</servlet-name>
        <url-pattern>/aula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>evento</servlet-name>
        <url-pattern>/evento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attrezzatura</servlet-name>
        <url-pattern>/attrezzatura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>authprotec</servlet-name>
        <url-pattern>/authprotec</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>listgruppi</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/progettoDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
