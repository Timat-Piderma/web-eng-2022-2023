{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/posizione.schema.json",
    "title": "Posizione",
    "description": "La posizione di un aula o pi√π aule",
    "type": "object",
    "additionalProperties": "false",
    "required": [
        "luogo",
        "edificio",
        "piano"
    ],
    "properties": {
        "luogo": {
            "type": "string",
            "description": "Posizione geografica",
            "examples": [
                "Coppito",
                "Roio"
            ]
        },
        "edificio": {
            "type": "string",
            "description": "Nome dell'edificio",
            "examples": [
                "Edificio Alan Turing",
                "Coppito 2"
            ]
        },
        "piano": {
            "type": "string",
            "description": "Piano dell'edificio",
            "examples": [
                "Piano Terra",
                "Primo Piano"
            ]
        }
    }
}